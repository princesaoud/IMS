<EditForm Enhance="true" Model="searchFilter" OnValidSubmit="Search">
    <div class="input-group">
        <InputText class="form-control" @bind-Value="searchFilter" placeholder="Search" />

        <button type="submit" class="btn btn-primary input-group-text">Search</button>
    </div>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private string searchFilter { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private async Task Search()
    {
        if (OnSearch.HasDelegate)
        {
            await OnSearch.InvokeAsync(searchFilter);
        }

    }
}
